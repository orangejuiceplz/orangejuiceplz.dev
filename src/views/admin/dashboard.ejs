<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>admin dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/js/starry-background.js"></script>
</head>
<body>
    <%- include('../../partials/header') %>
    <main class="container mt-4">
        <div class="admin-dashboard">
            <h1 class="neon-text pulse">blog admin dashboard</h1>
            <a href="/blog/admin/create" class="cta-button mb-3 float">Create New Post</a>
            
            <table class="admin-table">
                <thead>
                    <tr>
                        <th class="neon-text">title</th>
                        <th class="neon-text">created at</th>
                        <th class="neon-text">actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% posts.forEach(post => { %>
                        <tr>
                            <td><%= post.title %></td>
                            <td><%= post.createdAt.toLocaleDateString() %></td>
                            <td>
                                <a href="/blog/post/<%= post._id %>" class="nav-button">View</a>
                                <a href="/blog/admin/edit/<%= post._id %>" class="nav-button">Edit</a>
                                <form action="/blog/admin/delete/<%= post._id %>" method="POST" class="d-inline">
                                    <button type="submit" class="nav-button" onclick="return confirm('are you sure you want to delete this post?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </main>
    <%- include('../../partials/footer') %>
</body>
</html>