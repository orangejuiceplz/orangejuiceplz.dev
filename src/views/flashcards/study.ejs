<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Study Flashcards | orangejuiceplz</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/flashcards.css">
  <link rel="stylesheet" href="/css/animations.css">
  <script src="/js/starry-background.js"></script>
</head>
<body>
  <%- include('../../partials/header') %>
  <main>
    <section class="study-flashcards scroll-animate">
      <h1 class="pulse">Study Flashcards</h1>
      <div id="flashcard-container" class="flashcard-display">
        <!-- Flashcards will be displayed here -->
      </div>
      <div class="flashcard-controls">
        <button id="prev-btn" class="control-button">Previous</button>
        <button id="flip-btn" class="control-button">Flip</button>
        <button id="next-btn" class="control-button">Next</button>
      </div>
    </section>
  </main>
  <%- include('../../partials/footer') %>
  <script>
    // Pass the flashcards data to the client-side JavaScript
    var flashcardsData = <%- JSON.stringify(flashcards) %>;
  </script>
  <script src="/js/flashcards.js"></script>
  <script src="/js/main.js"></script>
  <script src="/js/scroll-animations.js"></script>
</body>
</html>