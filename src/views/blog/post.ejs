<%- include('../../partials/header') %>

<main class="container mt-4">
  <article class="blog-post">
    <header class="post-header">
      <h1 class="post-title neon-text pulse"><%= post.title %></h1>
      <div class="post-meta">
        <span class="post-date">
          Published on <%= post.createdAt.toLocaleDateString() %>
          <% if (post.updatedAt > post.createdAt) { %>
            | Updated on <%= post.updatedAt.toLocaleDateString() %>
          <% } %>
        </span>
        <% if (post.author) { %>
          <span class="post-author">by <%= post.author %></span>
        <% } %>
      </div>
    </header>

    <div class="post-content">
      <%- post.content %>
    </div>

    <footer class="post-footer">
      <div class="post-tags">
        <% if (post.tags && post.tags.length > 0) { %>
          <h3>Tags:</h3>
          <ul>
            <% post.tags.forEach(tag => { %>
              <li><a href="/blog/tag/<%= tag %>" class="nav-button"><%= tag %></a></li>
            <% }) %>
          </ul>
        <% } %>
      </div>
      
      <div class="post-navigation">
        <% if (previousPost) { %>
          <a href="/blog/post/<%= previousPost._id %>" class="nav-button">← Previous Post</a>
        <% } %>
        <% if (nextPost) { %>
          <a href="/blog/post/<%= nextPost._id %>" class="nav-button">Next Post →</a>
        <% } %>
      </div>
    </footer>
  </article>
</main>

<%- include('../../partials/footer') %>