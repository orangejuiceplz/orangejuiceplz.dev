<%- include('../../partials/header') %>

<main class="container mt-4">
  <div class="admin-dashboard">
    <h1>Blog Admin Dashboard</h1>
    <a href="/blog/admin/create" class="cta-button mb-3">Create New Post</a>
    
    <table class="admin-table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% posts.forEach(post => { %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.createdAt.toLocaleDateString() %></td>
            <td>
              <a href="/blog/post/<%= post._id %>" class="nav-button">View</a>
              <a href="/blog/admin/edit/<%= post._id %>" class="nav-button">Edit</a>
              <form action="/blog/admin/delete/<%= post._id %>" method="POST" class="d-inline">
                <button type="submit" class="nav-button" onclick="return confirm('Are you sure you want to delete this post?')">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</main>

<%- include('../../partials/footer') %>